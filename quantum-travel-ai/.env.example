# Environment variables for Quantum Travel AI
# Copy this file to .env and fill in your values

# Application Settings
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# AI API Keys (Get from respective providers)
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-google-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Configuration (Optional)
DATABASE_URL=postgresql://quantum:quantum123@localhost:5432/quantumdb
REDIS_URL=redis://localhost:6379/0

# Security Settings
ALLOWED_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_FILE_UPLOAD=True
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO

# PostgreSQL (if using docker-compose)
POSTGRES_USER=quantum
POSTGRES_PASSWORD=quantum123
POSTGRES_DB=quantumdb
